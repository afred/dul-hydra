log4r_config:
    loggers:
        - name      : batch_processor
          level     : INFO
          trace     : 'false'
          outputters:
            - stdout
            - logfile
    outputters:
        - type      : StdoutOutputter
          name      : stdout
          level     : DEBUG
          formatter :
            date_pattern: '%F %T.%L'
            pattern     : '%d %l: %m'
            type        : PatternFormatter
        - type        : DateFileOutputter
          name        : logfile
          trunc       : 'false'
          dirname     : "#{LOG_DIR}"
          filename    : "#{LOG_FILE}"
          formatter   :
            date_pattern: '%F %T.%L'
            pattern     : '%d %l: %m'
            type        : PatternFormatter
