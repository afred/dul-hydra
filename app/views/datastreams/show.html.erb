<h1><%= @object.pid %></h1>

<h3>Datastream: <%= @datastream.dsid %></h3>

<div class="document">
  <p>
    <%= link_to "Download Content", {:action => 'show', :object_id => @object, :id => @datastream.dsid, :download => 'true'} %>
  </p>
  <dl class="dl-horizontal dl-invert">
    <% @datastream.profile.each do |key, value| %>
    <dt><%= key.sub(/^ds/, "") %>:</dt>
    <dd>
      <% if value.blank? %>&nbsp;<% else %><%= value %><% end %>
    </dd>
    <% end %>
  </dl>
</div>
