<!DOCTYPE html>
<html>
<head>
  <title>DulHydra</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <div class="msg notice"><%= flash[:notice] %></div>
<% end %>
  <div class="user-management">
    <% if current_user %>
      <%= link_to "Sign out", destroy_user_session_path %>
    <% else %>
      <!-- XXX should not display on sign in page -->
      <%= link_to "Sign in", new_user_session_path %>
    <% end %>
  </div>
<%= yield %>

</body>
</html>
