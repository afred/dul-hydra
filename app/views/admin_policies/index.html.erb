<%= content_tag :h1, I18n.t('dul_hydra.admin_policies.headings.index') %>
<% unless @admin_policies.empty? %>
<%= content_tag :table, :class => 'table table-bordered table-striped table-condensed' do %>
	<%= content_tag :thead do %>
		<%= content_tag :tr do %>
			<%= content_tag :th, I18n.t('dul_hydra.column_names.pid'), :scope => 'col' %>
		<% end %>
	<% end %>
	<%= content_tag :tbody do %>
		<% @admin_policies.each do |ap| %>
			<%= content_tag :tr do %>
				<%= content_tag :td, link_to(ap.id, admin_policy_path(ap)) %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
<% else %>
	<%= content_tag :p, I18n.t('dul_hydra.admin_policies.messages.no_admin_policies') %>
<% end %>