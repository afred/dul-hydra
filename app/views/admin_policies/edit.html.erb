<h4><%= t('dul_hydra.admin_policies.page_titles.edit') %></h4>

<%= bootstrap_form_for @admin_policy do |f| %>
  <h5><%= t('dul_hydra.admin_policies.headings.inheritable_rights') %></h5>
  <% @admin_policy.default_permissions.each do |perm| %>
    <%= perm[:name] %>
    <%= select_tag "perm[#{perm[:name]}]", options_for_select(permissions_select_options(true), perm[:access]) %>
    <br />
  <% end %>  
  <%= select_tag 'new_group_name', options_for_select(add_group_select_options), {prompt: 'Select group to add'} %>
  <%= select_tag 'new_group_perm', options_for_select(permissions_select_options(false)), {prompt: 'Select permission'} %>
  
  <h5><%= t('dul_hydra.admin_policies.headings.license') %></h5>
  <%= f.text_field :default_license_title %>
  <%= f.text_area :default_license_description %>
  <%= f.text_field :default_license_url %>
  <%= f.actions %>
<% end %>
