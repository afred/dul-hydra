<div id="content" class="span9 show-document">
  <%= render_document_breadcrumbs %>
  <div id="document" class="<%= render_document_class %>">
	<div class="row">
	  <div class="span7">
		<h2><%= @document.title %></h2>
		<h4 class="muted">
		  <%= @document.active_fedora_model %>
		  <small>
		  <%= @document.id %>
		  <%= @document.identifier %>
		  </small>
		</h4>
	  </div>
	  <div class="span2">
		<div class="pull-right">
		  <%= render_thumbnail %>
		</div>
	  </div>
	</div>
	<div class="document">
	  <%= render_document_partial @document, :show %>
	</div>
  </div>
</div> <!-- /content -->
<div id="sidebar" class="span3">
  <%= render_document_sidebar_partial  %>
</div><!-- /sidebar -->
