<h1>Create a new Collection</h1>

<%= form_for @collection do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :value=>"" %>
  <br />
  <%= f.label :identifier %>
  <%= f.text_field :identifier, :value=>"" %>
  <br />
  Access Policy: 
  <%= radio_button_tag(:policy, "public") %>
  <%= label_tag(:policy_public, "Public") %>
  <%= radio_button_tag(:policy, "restricted") %>
  <%= label_tag(:policy_restricted, "Restricted") %>
  <%= f.submit "Create Collection" %>
<% end %>
