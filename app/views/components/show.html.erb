<h1>Component <%= @component.pid %></h1>

<% if @component.item %>
  Part of Item: <%= link_to @component.item.pid, item_path(@component.item.pid) %>
<% else %>
  <%= form_for @component do |f| %>
    <%= f.hidden_field :pid %>
    <%= f.label :item %>
    <%= f.text_field :item %>
    <%= f.submit "Add Component to Item" %>
  <% end %>
<% end %>
