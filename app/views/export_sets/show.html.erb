<h1>Export Set</h1>

<p>
  <%= link_to "Edit", {:action => 'edit', :id => @export_set}, :method => 'get' %> 
  |
  <%= link_to "Delete", {:action => 'destroy', :id => @export_set}, :method => 'delete', :confirm => "Are you sure?" %>
</p>

<table class="table">
  <tr>
    <th scope="row">Title:</th>
    <td><%= @export_set.title %></td>
  </tr>
  <tr>
    <th scope="row">Created:</th>
    <td><%= @export_set.created_at %></td>
  </tr>
  <tr>
    <th scope="row">Archive:</th>
    <td><%= link_to @export_set.archive_file_name, @export_set.archive.url %></td>
  </tr>
</table>

<h3>Exported Objects: Metadata</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">PID</th>
      <th scope="col">Type</th>
      <th scope="col">Title</th>
      <th scope="col">Identifier</th>
      <th scope="col">Source</th>
    </tr>
  </thead>
  <tbody>
    <% @document_list.each do |doc| %>
    <tr>
      <td><%= link_to doc.id, catalog_path(doc.id) %></td>
      <td><%= doc.active_fedora_model %></td>
      <td><%= doc.get(:title_t) %></td>
      <td><%= doc.get(:identifier_t) %></td>
      <td><%= doc.get(:source_t) %></td>
    </tr>
    <% end %>		
  </tbody>
</table>
